<JMathAnimConfig>
    <video>
        <size width="800" height="600" fps="30"/>
        <createMovie>false</createMovie>
        <showPreviewWindow>true</showPreviewWindow>
    </video>
    <background>
        <color>#192841</color>
<!--        <shadows kernelSize="8" offsetX="5" offsetY="5" alpha=".7">false</shadows>
        <image>fondo.png</image>-->
    </background>
    <styles>
        <style name="default">
            <drawColor>#FFFFFFFF</drawColor>
            <fillColor>#FF000000</fillColor>
            <thickness>1</thickness>
            <dashStyle>solid</dashStyle>
            <absoluteThickness>false</absoluteThickness>
        </style>
        <style name="red">
            <drawColor>RED</drawColor>
            <fillColor>#FF000000</fillColor>
            <thickness>1</thickness>
            <dashStyle>dotted</dashStyle>
            <absoluteThickness>false</absoluteThickness>
        </style>
    </styles>
</JMathAnimConfig>
